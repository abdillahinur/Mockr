{
  "routes": {
    "/ping": {
      "method": "GET",
      "response": {
        "ok": true
      }
    },
    "/fail": {
      "method": "GET",
      "status": 500,
      "delay": 800,
      "response": {
        "error": "boom"
      }
    },
    "/api/users": {
      "method": "GET",
      "status": 200,
      "response": {
        "users": [
          {"id": 1, "name": "John Doe", "email": "john@example.com"},
          {"id": 2, "name": "Jane Smith", "email": "jane@example.com"}
        ]
      }
    },
    "/api/users/1": {
      "method": "GET",
      "status": 200,
      "delay": 100,
      "response": {
        "id": 1,
        "name": "John Doe (Updated)",
        "email": "john.doe@example.com"
      }
    },
    "/api/users": {
      "method": "POST",
      "status": 201,
      "response": {
        "id": 3,
        "name": "New User",
        "email": "new@example.com"
      }
    },
    "/api/error": {
      "method": "GET",
      "status": 500,
      "response": {
        "error": "Internal server error",
        "message": "Something went wrong"
      }
    },
    "/api/test": {
      "method": "GET",
      "status": 200,
      "response": {
        "message": "Hot reload is working perfectly!"
      }
    },
    "/api/case-test": {
      "method": "post",
      "status": 201,
      "delay": 200,
      "response": {
        "message": "Case-insensitive method test",
        "method": "POST"
      }
    },
    "/api/no-status": {
      "method": "GET",
      "response": {
        "message": "Default status 200"
      }
    },
    "/api/no-delay": {
      "method": "GET",
      "status": 202,
      "response": {
        "message": "No delay, custom status"
      }
    },
    "/bad": {
      "method": "WHATEVER",
      "response": {
        "x": 1
      }
    }
  }
}